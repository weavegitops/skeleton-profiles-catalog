SHELL: /bin/bash
.ONESHELL:


OS := $(shell uname | tr '[:upper:]' '[:lower:]')
CONFDIR="${PWD}/.conf"
BINDIR="${PWD}/.bin"
REPODIR="${PWD}/charts"
INFRASTRUCTURE?="kind"


sort-layers:
	@echo "Sorting charts by layers"
	bash .bin/sort-layers.sh

test: 
	@if [ ${INFRASTRUCTURE} = "kind" ]; then\
		echo "Deleting kind cluster ..."
		bash .bin/sort-layers.sh
	elif [ ${INFRASTRUCTURE} = "gke" ]; then\
		echo "Deleting gke cluster ..."
		bash .bin/sort-layers.sh
	fi